      <div class="mdl-card-square mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Password reset</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <form id="passwordResetForm" onsubmit="event.preventDefault();">
        
        <input id="userIdField" style="display:none;" type="text" value="{{ userviewvars.userId }}" autocomplete="username">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input name="oldpassword" class="mdl-textfield__input" type="password" id="oldpassword">
              <label class="mdl-textfield__label" for="oldpassword">Current Password</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input name="password" class="mdl-textfield__input" type="password" id="password" autocomplete="new-password">
              <label class="mdl-textfield__label" for="password" >New Password</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input name="repassword" class="mdl-textfield__input" type="password" id="repassword" autocomplete="new-password">
              <label class="mdl-textfield__label" for="repassword">Retype new Password</label>
          </div>
          <div class="mdl-card__actions">
          <button onclick="submitFormWithAjax('#passwordResetForm','user/passwordreset',passwordResetComplete)" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Reset</button>
        
        </form>
        </div>
      </div>